{
    "title": "Editor",
    "description": "Code editor settings.",
    "type": "object",
    "properties": {
        "font": {
            "title": "Text font size",
            "type": "number",
            "default": 12
        },
        "live_autocompletion": {
            "title": "Enable Live Autocompletion",
            "description": "When live is disabled, use [Ctrl-Space] for autocompletion.",
            "type": "boolean",
            "default": false
        },
        "block_closing_unsaved_tab": {
            "title": "Hide close tab button if there are unsaved changed",
            "type": "boolean",
            "default": false
        },
        "newline_mode": {
            "title": "Newline mode",
            "type": "string",
            "enum": ["auto", "unix", "windows"],
            "default": "auto"
        }
    }
}
